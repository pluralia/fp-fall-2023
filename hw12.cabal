cabal-version:      2.4
name:               hw12
version:            0.1.0.0
synopsis:           HW12
-- description:
license:            MIT
license-file:       LICENSE
author:             SophiaLaz
maintainer:         lazareva.sone4ka@yandex.ru
-- copyright:
build-type:         Simple
extra-doc-files:    CHANGELOG.md
-- extra-source-files:

common warnings
    ghc-options: -Wall

library
    import:           warnings
    exposed-modules:  MyLib,
        Objects,
        Errors,
        Logging,
        Parser,
        Database
    ghc-options:      -Wall
    -- other-extensions:
    -- other-modules:    Parser
    build-depends:    base ^>=4.18.1.0,
        mtl,
        containers
    hs-source-dirs:   src
    default-language: Haskell2010

executable hw12
    import:           warnings
    main-is:          Main.hs
    ghc-options:      -Wall
    -- other-modules:    
    build-depends:    base ^>=4.18.1.0,
        mtl,
        directory,
        filepath,
        containers,
        hw12,
        time
    hs-source-dirs:   app
    default-language: Haskell2010

test-suite hw12-test
    import:           warnings
    default-language: Haskell2010
    ghc-options:      -Wall
    other-modules:    TestSpec
    -- other-extensions:
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          MyLibTest.hs
    build-depends:
        base ^>=4.18.1.0,
        hspec,
        hw12,
        mtl
