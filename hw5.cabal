common warnings
    ghc-options: -Wall

library
    import:           warnings
    exposed-modules:  MyLib
    -- other-modules:
    -- other-extensions:
    build-depends:    base ^>=4.17.2.0, 
        containers
    hs-source-dirs:   src
    default-language: Haskell2010

test-suite hw5-test
    import:           warnings
    default-language: Haskell2010
    other-modules:    TestSpec
    -- other-extensions:
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          MyLibTest.hs
    build-depends:
        base ^>=4.17.2.0,
        hw5, 
        hspec, 
        hspec-discover, 
        containers
